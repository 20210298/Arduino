int v = 0;
int pin[4] = {10, 11, 12, 13};
void setup() {
  Serial.begin(9600);
  for(int i = 0; i<4; ++i ) {
    pinMode(pin[i], OUTPUT);
  }

}

void loop() {
  if (Serial.available()) {
    v = Serial.read();
    Serial.write(v);

    for(int i=0; i<4; ++i ) {
      if(v==pin[i]) digitalWrite(pin[i], HIGH);
      else digitalWrite(pin[i], LOW);
    }

  }
}
